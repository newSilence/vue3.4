{
  "compilerOptions": {
    "outDir": "dist",//输出目录
    "sourceMap": true,//生成sourceMap文件
    "target": "es2016",//编译目标
    "module": "esnext",//模块类型
    "moduleResolution": "node",//模块解析策略
    "strict": false,//严格模式
    "resolveJsonModule": true,//解析json模块
    "esModuleInterop": true,//允许通过es6语法引入commonjs模块
    "jsx": "preserve",//jsx不转义
    "lib": ["esnext", "dom"],//支持的类库 esnext dom
    "baseUrl": ".",//基础路径
    "paths": {//路径别名
      "@vue/*": ["packages/*/src"]
    }
  }
}
